@model Web_Mobile_Assignment_New.Models.House
@{
    ViewData["Title"] = "House Details";
}

<div class="row mt-4">
    <!-- 左边图片 -->
    <div class="col-md-7">
        <div class="card shadow-sm">
            <img src="@Model.ImageUrl" class="card-img-top img-fluid rounded" alt="House Image">
        </div>
    </div>

    <!-- 右边详情 -->
    <div class="col-md-5">
        <h3 class="fw-bold">@Model.RoomType - @Model.Address</h3>
        <p class="text-muted">
            <i class="fa-solid fa-ruler-combined"></i> @Model.Sqft sqft |
            <i class="fa-solid fa-bed"></i> @Model.Rooms Rooms |
            <i class="fa-solid fa-bath"></i> @Model.Bathrooms Bathrooms
        </p>

        <h4 class="text-success fw-bold">RM @Model.Price</h4>

        <hr />

        <!-- 配置 -->
        <h5 class="fw-semibold">Furnishing</h5>
        <p>@(string.IsNullOrEmpty(Model.Furnishing) ? "Not specified" : Model.Furnishing)</p>

        <h5 class="fw-semibold">Other Information</h5>
        <p>@(string.IsNullOrEmpty(Model.Other) ? "No additional info" : Model.Other)</p>

        <hr />

        <!-- 租期 -->
        <h5 class="fw-semibold">Rental Period</h5>
        @if (Model.StartDate.HasValue && Model.EndDate.HasValue)
        {
            <p>@Model.StartDate.Value.ToString("dd MMM yyyy") - @Model.EndDate.Value.ToString("dd MMM yyyy")</p>
        }
        else
        {
            <p>Flexible</p>
        }

        <!-- 租用按钮 -->
        <a href="@Url.Action("Rent", "Home", new { id = Model.Id })" class="btn btn-primary btn-lg w-100 mt-3">
            <i class="fa-solid fa-key"></i> Rent This House
        </a>
        <!-- 举报按钮（目前没功能） -->
        <button type="button" class="btn btn-danger btn-lg w-100 mt-2">
            <i class="fa-solid fa-flag"></i> Report This House
        </button>
    </div>
</div>

<!-- 底部地址 -->
<div class="mt-4 p-3 bg-light rounded shadow-sm">
    <h5 class="fw-semibold"><i class="fa-solid fa-map-marker-alt"></i> Address</h5>
    <p>@Model.Address</p>
</div>

<!-- ⭐ 评论与评分 -->
<div class="mt-5">
    <h4 class="fw-bold">Reviews & Ratings</h4>

    <!-- 平均分 -->
    <div class="mb-3">
        @if (ViewBag.TotalReviews > 0)
        {
            <p>
                <span class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round((double)ViewBag.AvgRating))
                        {
                            <i class="fa-solid fa-star"></i>
                        }
                        else
                        {
                            <i class="fa-regular fa-star"></i>
                        }
                    }
                </span>
                <strong>@Math.Round((double)ViewBag.AvgRating, 1)</strong> / 5.0
                <span class="text-muted">(@ViewBag.TotalReviews reviews)</span>
            </p>
        }
        else
        {
            <p class="text-muted">No reviews yet.</p>
        }
    </div>

    <!-- 提交评论表单（Tenant/普通用户可以，Owner 不能） -->
@if (User.Identity.IsAuthenticated && !User.IsInRole("Owner"))
{
        <form asp-action="AddReview" asp-controller="Home" method="post" class="mb-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="houseId" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Your Rating</label><br />
                <div class="star-rating d-flex justify-content-start">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <input type="radio" id="star@i" name="rating" value="@i" style="display:none;" />
                        <label for="star@i" class="star-label" style="cursor:pointer;font-size:2rem;color:#ffc107;margin-right:5px;">
                            <i class="fa-regular fa-star"></i>
                        </label>
                    }
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Your Comment</label>
                <textarea name="comment" class="form-control" rows="3" placeholder="Write your comment..."></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
}
else if (User.IsInRole("Owner"))
{
        <p class="text-muted">Owners cannot leave reviews, but they can view feedback from tenants below.</p>
}
else
{
        <p class="text-muted">Please <a href="/Account/Login">login</a> to leave a review.</p>
}

    <!-- 显示所有评论 -->
    <div class="mt-4">
        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            @foreach (var review in Model.Reviews.OrderByDescending(r => r.Id))
            {
                <div class="border rounded p-3 mb-3">
                    <p class="mb-1 fw-bold">@review.UserEmail</p>
                    <p class="mb-1 text-warning">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= review.Rating)
                            {
                                <i class="fa-solid fa-star"></i>
                            }
                            else
                            {
                                <i class="fa-regular fa-star"></i>
                            }
                        }
                    </p>
                    <p>@review.Comment</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No comments yet.</p>
        }
    </div>

    <!-- ⭐ 星星点击逻辑 -->
    <script>
        document.querySelectorAll('.star-label').forEach(label => {
            label.addEventListener('click', function () {
                let selectedId = this.getAttribute("for");   // 例如 "star3"
                let selectedValue = parseInt(document.getElementById(selectedId).value);

                // 清空所有星星
                document.querySelectorAll('.star-label i').forEach(star => {
                    star.classList.remove('fa-solid');
                    star.classList.add('fa-regular');
                });

                // 点亮 1 ~ 选中的
                for (let i = 1; i <= selectedValue; i++) {
                    let starIcon = document.querySelector(`#star${i} + label i`);
                    if (starIcon) {
                        starIcon.classList.remove('fa-regular');
                        starIcon.classList.add('fa-solid');
                    }
                }

                // 触发对应 radio 勾选（保证表单有值）
                document.getElementById(selectedId).checked = true;
            });
        });
    </script>

