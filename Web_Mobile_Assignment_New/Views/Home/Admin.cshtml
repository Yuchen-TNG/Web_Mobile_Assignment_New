@{
    ViewBag.Title = "Home | Admin";
}
<style>
.AdminBlock {
    width: 100%;
    min-height: 750px;
    max-width: 1200px;
    margin: 0 auto;
    background-color: #f5f5f5;

    /* Grid 布局：两列两行 */
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 40px;
    padding: 60px;
    justify-items: center;
    align-items: center;
    border-radius: 12px;
}

.button {
        width: 500px;
        height: 300px;
    font-size: 22px;
    font-weight: bold;
    color: white;
    background: linear-gradient(135deg, #1e90ff, #4682b4);
    border: none;
    border-radius: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 6px 14px rgba(0,0,0,0.2);
}

.button:hover {
    background: linear-gradient(135deg, #4682b4, #1e90ff);
    transform: translateY(-6px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.3);
}

</style>

<div class="AdminBlock">
    <form asp-controller="Admin" asp-action="UserManagement" method="get">
        <button type="submit" class="button">User Management</button>
    </form>
    <form asp-controller="Admin" asp-action="PropertyManagement" method="get">
        <button type="submit" class="button">Property Management</button>
    </form>
    <form asp-controller="Admin" asp-action="ReportManagement" method="get">
        <button type="submit" class="button">Report Management</button>
    </form>
    <form asp-controller="Admin" asp-action="BookingManagement" method="get">
        <button type="submit" class="button">Booking Management</button>
    </form>
</div>
