@model List<Web_Mobile_Assignment_New.Models.House>

@{
    ViewData["Title"] = "Available Houses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Available Houses</h2>
    <a class="btn btn-success" href="@Url.Action("AddHouse", "Home")">+ Add House</a>
</div>

<div class="row">
    @foreach (var house in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm" style="width: 100%; aspect-ratio: 1/1; overflow: hidden;">
                <img src="@house.ImageUrl" alt="House Image"
                     style="width: 100%; height: 75%; object-fit: cover;" />
                <div class="card-body text-center p-2">
                    <h5 class="card-title">@house.Price.ToString("C")</h5>
                    <a href="@Url.Action("Details", "Home", new { id = house.Id })"
                       class="btn btn-primary btn-sm mt-2">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
