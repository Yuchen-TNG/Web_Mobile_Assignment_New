@model UpdatePasswordVM

@{
    ViewBag.Title = "Account | Update Password";
}

@section head {
    <style>
        body {
            background: linear-gradient(135deg, #4e73df, #6f42c1);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .update-password-container {
            max-width: 420px;
            margin: 80px auto;
            padding: 40px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

            .update-password-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #4e73df;
                font-weight: 600;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                margin-bottom: 6px;
                color: #5a5c69;
            }

            .form-group input {
                width: 100%;
                padding: 10px 12px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 1rem;
            }

            .form-group span {
                display: block;
                margin-top: 5px;
                font-size: 0.9rem;
                color: #e74a3b;
            }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }

            .button-group button {
                flex: 1;
                padding: 12px;
                border: none;
                border-radius: 6px;
                font-size: 1rem;
                font-weight: 500;
                cursor: pointer;
                color: white;
                transition: background 0.3s;
            }

                .button-group button[type="submit"] {
                    background: #4e73df;
                }

                    .button-group button[type="submit"]:hover {
                        background: #3b5bdb;
                    }

                .button-group button[type="reset"] {
                    background: #6f42c1;
                }

                    .button-group button[type="reset"]:hover {
                        background: #5a2fa0;
                    }
    </style>
}

<div class="update-password-container">
    <h2>Update Password</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Current">Current Password</label>
            <input asp-for="Current" type="password" autofocus />
            <span asp-validation-for="Current"></span>
        </div>

        <div class="form-group">
            <label asp-for="New">New Password</label>
            <input asp-for="New" type="password" />
            <span asp-validation-for="New"></span>
        </div>

        <div class="form-group">
            <label asp-for="Confirm">Confirm New Password</label>
            <input asp-for="Confirm" type="password" />
            <span asp-validation-for="Confirm"></span>
        </div>

        <div class="button-group">
            <button type="submit">Update</button>
            <button type="reset">Reset</button>
        </div>
    </form>
</div>
