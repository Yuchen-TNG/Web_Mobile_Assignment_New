@model Web_Mobile_Assignment_New.Models.User

@{
    ViewData["Title"] = "User Details";
}

@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<style>
    /* ==== 容器 ==== */
    .user-details-container {
        max-width: 650px;
        margin: 30px auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #ffffff;
        padding: 30px 35px;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s ease;
    }

    /* ==== 用户头像 ==== */
    .user-photo-container {
        position: relative;
        display: inline-block;
        margin-bottom: 20px;
    }

    .user-photo {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #2196F3;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .user-photo:hover {
            transform: scale(1.07);
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
        }

    .photo-actions {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 12px;
    }

    /* ==== 按钮 ==== */
    button, a.button-link, a.btn {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s ease;
        margin: 0;
        display: inline-block;
        min-width: 120px;
    }

        button:hover, a.button-link:hover, a.btn:hover {
            transform: scale(1.05);
            filter: brightness(0.9);
        }

    .btn-save {
        background: #2196F3;
    }

    .btn-back {
        background: #9E9E9E;
    }

    .btn-delete {
        background: #f44336;
    }

    .btn-reset {
        background: #9E9E9E;
    }

    .btn-restrict {
        background: #e67e22;
    }

    .btn-valid {
        background: #4caf50;
    }

    /* ==== 表单 ==== */
    .form-field {
        margin-bottom: 18px;
        text-align: left;
    }

        .form-field label {
            display: block;
            font-weight: 600;
            margin-bottom: 6px;
            color: #333;
        }

        .form-field input {
            width: 100%;
            padding: 10px 14px;
            font-size: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
            outline: none;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .form-field input:focus {
                border-color: #2196F3;
                box-shadow: 0 0 6px rgba(33,150,243,0.3);
            }

            .form-field input[readonly] {
                background: #f5f5f5;
                color: #555;
            }

    /* ==== 状态 ==== */
    .status-valid {
        color: green;
        font-weight: 600;
    }

    .status-restricted {
        color: #e67e22;
        font-weight: 600;
    }

    .status-unknown {
        color: #666;
    }

    /* ==== 动作按钮区 ==== */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 14px;
        margin-top: 25px;
        flex-wrap: wrap;
    }

    /* ==== 消息提示 ==== */
    .alert {
        max-width: 650px;
        margin: 20px auto;
        padding: 12px 18px;
        border-radius: 8px;
        font-weight: bold;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
    }

    .alert-error {
        background: #f8d7da;
        color: #721c24;
    }

</style>

<h1>User Details</h1>

<div class="user-details-container">

    <div class="user-photo-container">
        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant photoUser && !string.IsNullOrEmpty(photoUser.PhotoURL))
        {
            <img src="/photos/@photoUser.PhotoURL" alt="User Photo" class="user-photo" />
        }
        else
        {
            <img src="/images/photo.jpg" alt="Default Photo" class="user-photo" />
        }

        <div class="photo-actions">
            <form asp-action="DeletePhoto" method="post" onsubmit="return confirm('Are you sure you want to delete photo?');">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-delete">🗑 Delete</button>
            </form>

            <form asp-action="UserUploadPhoto" method="post" enctype="multipart/form-data">
                <input type="hidden" name="email" value="@Model.Email" />
                <input type="file" name="photoFile" accept="image/*" required />
                <button type="submit" class="btn-save">📤 Upload</button>
            </form>
        </div>
    </div>

    <form asp-action="UpdateUser" method="post">
        <div class="form-field">
            <label>Email:</label>
            <input asp-for="Email" readonly />
        </div>

        <div class="form-field">
            <label>Name:</label>
            <input asp-for="Name" />
        </div>

        <div class="form-field">
            <label>Birthday:</label>
            <input type="date" name="BirthdayString" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
        </div>

        <div class="form-field">
            <label>Role:</label>
            <input asp-for="Role" readonly />
        </div>

        <div class="form-field">
            <label>Status:</label>
            @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser)
            {
                <input type="text" value="@tenantUser.Status" readonly />
            }
            else
            {
                <input type="text" value="N/A" readonly />
            }
        </div>

        <button type="submit" class="btn-save">Save Changes</button>
        <a asp-action="UserDetails" asp-controller="Admin" asp-route-email="@Model.Email" class="button-link btn-reset">↩ Reset</a>
        <a asp-controller="Admin" asp-action="UserManagement" class="button-link btn-back">⬅ Back</a>
    </form>

    <div class="action-buttons">
        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete user?');">
            <input type="hidden" name="email" value="@Model.Email" />
            <button type="submit" class="btn-delete">🗑 Delete User</button>
        </form>

        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser && tenantUser.Status == "valid")
        {
            <form asp-action="RestrictedUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-restrict">Restricted User</button>
            </form>
        }
        else
        {
            <form asp-action="ValidUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-valid">⭕ Valid User</button>
            </form>
        }
    </div>

</div>
