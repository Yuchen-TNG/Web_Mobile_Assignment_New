@model Web_Mobile_Assignment_New.Models.House

@{
    ViewData["Title"] = "House Details";
}

<h2>House Details</h2>

<div class="card p-3">
    <p><strong>Type:</strong> @Model.RoomType</p>
    <p><strong>Price:</strong> RM @Model.Price</p>
    <p><strong>Rooms:</strong> @Model.Rooms</p>
    <p><strong>Bathrooms:</strong> @Model.Bathrooms</p>
    <p><strong>Square Feet:</strong> @Model.Sqft</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Other Info:</strong> @Model.Other</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <p><img src="@Model.ImageUrl" alt="House Image" class="img-fluid" style="max-width:400px;" /></p>
    }
    <div class="d-flex justify-content-between align-items-center mt-3">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Back to List</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login"
               asp-controller="Account"
               asp-route-returnUrl="@Url.Action("Details", "Home", new { id = Model.Id })"
               class="btn btn-primary">
                Rent this Room
            </a>
        }
        else if (User.IsInRole("Tenant"))
        {
            <a asp-action="Rent" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-primary">
                Rent this Room
            </a>
        }
    </div>

</div>

