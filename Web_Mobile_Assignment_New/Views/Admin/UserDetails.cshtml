@model Web_Mobile_Assignment_New.Models.User

@{
    ViewData["Title"] = "User Details";
}

@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<style>
    .user-details-container {
        max-width: 600px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
        text-align: center;
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    .user-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 15px;
        transition: transform 0.3s ease;
    }

        .user-photo:hover {
            transform: scale(1.05);
        }

    button,
    a.button-link {
        padding: 10px 18px;
        border: none;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        transition: transform 0.2s ease, filter 0.2s ease;
        margin: 5px 5px 0 0;
        display: inline-block;
    }

        button:hover,
        a.button-link:hover {
            transform: scale(1.03);
            filter: brightness(0.9);
        }

    .btn-save {
        background: #2196F3;
    }

    .btn-back {
        background: #9E9E9E;
    }

    .btn-delete {
        background: #f44336;
    }

    .form-field {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-field label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-field input {
            width: 100%;
            padding: 8px 10px;
            font-size: 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .form-field input:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 6px rgba(74,144,226,0.4);
            }

            .form-field input[readonly] {
                background: #eee;
            }

    .photo-delete-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }
</style>

<h1>User Details</h1>

<div class="user-details-container">

    <div class="photo-delete-form">
        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant photoUser && !string.IsNullOrEmpty(photoUser.PhotoURL))
        {
            <img src="@photoUser.PhotoURL" alt="User Photo" class="user-photo" />
            <form asp-action="DeletePhoto" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-delete">🗑 Delete Photo</button>
            </form>
        }
        else
        {
            <img src="/images/photo.jpg" alt="Default Photo" class="user-photo" />
        }
    </div>

    <form asp-action="UpdateUser" method="post">
        <div class="form-field">
            <label>Email:</label>
            <input asp-for="Email" readonly />
        </div>

        <div class="form-field">
            <label>Name:</label>
            <input asp-for="Name" />
        </div>

        <div class="form-field">
            <label>Birthday:</label>
            <input type="date" name="BirthdayString" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
        </div>

        <div class="form-field">
            <label>Role:</label>
            <input asp-for="Role" readonly />
        </div>

        <button type="submit" class="btn-save">💾 Save Changes</button>
        <a asp-controller="Admin" asp-action="UserManagement" class="button-link btn-back">⬅ Back</a>
    </form>

    <form asp-action="DeleteUser" method="post" style="margin-top:20px;">
        <input type="hidden" name="email" value="@Model.Email" />
        <button type="submit" class="btn-delete">🗑 Delete User</button>
    </form>

</div>
