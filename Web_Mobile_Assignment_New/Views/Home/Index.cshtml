@model List<Web_Mobile_Assignment_New.Models.House>

@{
    ViewData["Title"] = "Available Houses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Available Houses</h2>

    @if (User.IsInRole("Owner"))
    {
        <a class="btn btn-success" id="addHouse" href="@Url.Action("AddHouse", "Home")">+ Add House</a>
    }
</div>

<!-- 🔎 Filter Form -->
<form class="mb-4 p-3 border rounded bg-light" asp-action="Filter" asp-controller="Home" method="get">
    <div class="row">
        <!-- Price Range -->
        <div class="col-md-3 mb-2">
            <label for="minPrice" class="form-label">Min Price</label>
            <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Enter min price" min="0" />
        </div>
        <div class="col-md-3 mb-2">
            <label for="maxPrice" class="form-label">Max Price</label>
            <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Enter max price" min="0" />
        </div>

        <!-- House Type -->
        <div class="col-md-3 mb-2">
            <label for="type" class="form-label">Type</label>
            <select class="form-select" id="type" name="type">
                <option value="All">All</option>
                <option value="Whole Unit">Whole Unit</option>
                <option value="Single Room">Single Room</option>
                <option value="Medium Room">Medium Room</option>
                <option value="Big Medium Room">Big Medium Room</option>
                <option value="Master Room">Master Room</option>
            </select>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Apply Filter</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>

<!-- 房子列表 -->
<div class="row">
    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <div class="d-flex justify-content-center align-items-center bg-light rounded p-5"
                 style="min-height:200px;">
                <p class="text-muted mb-0 fs-5">There are currently no properties available</p>
            </div>
        </div>
    }
    else
    {
        @foreach (var house in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm" style="width: 100%; overflow: hidden;">

                    @* ✅ 优先显示 House.Images 的第一张 *@
                    @if (house.Images != null && house.Images.Any())
                    {
                        <img src="@house.Images.First().ImageUrl"
                             alt="House Image"
                             style="width: 100%; height: 180px; object-fit: cover;" />
                    }
                    else if (!string.IsNullOrEmpty(house.ImageUrl))
                    {
                        <img src="@house.ImageUrl"
                             alt="House Image"
                             style="width: 100%; height: 180px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light"
                             style="width:100%; height:180px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }

                <div class="card-body text-center p-2">
                    <h6 class="card-title fw-bold">
                        @(string.IsNullOrWhiteSpace(house.RoomName)
                                            ? house.RoomType
                                            : $"{house.RoomName} - {house.RoomType}")
                </h6>

                        <p class="text-success fw-bold mb-1">RM @house.Price</p>
                        <a href="@Url.Action("Details", "Home", new { id = house.Id })"
                           class="btn btn-primary btn-sm mt-2">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- ✅ 分页 -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

@section Scripts {
    <script>
        $(document).ready(function () {

            // ===================== Pagination via AJAX =====================
            $(document).on("click", ".page-btn", function (e) {
                e.preventDefault();
                let page = $(this).data("page");

                $.ajax({
                    url: '/Home/HouseList', // your action that returns partial view
                    type: 'GET',
                    data: { page: page },
                    success: function (result) {
                        $("#houseList").html(result);
                    },
                    error: function () {
                        alert("Error loading data");
                    }
                });
            });

            // ===================== Filter Validation =====================
            $("form[asp-action='Filter']").on("submit", function (e) {
                let minPrice = parseFloat($("#minPrice").val()) || 0;
                let maxPrice = parseFloat($("#maxPrice").val()) || 0;

                if (minPrice < 0 || maxPrice < 0) {
                    e.preventDefault();
                    alert("Price cannot be negative.");
                    return false;
                }

                if (maxPrice > 0 && minPrice > maxPrice) {
                    e.preventDefault();
                    alert("Min price cannot be greater than Max price.");
                    return false;
                }
            });

        });
    </script>
}


