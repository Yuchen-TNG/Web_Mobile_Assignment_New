@model RegisterVM

@{
    ViewBag.Title = "Account | Register";
}

@section head {
    <style>
        body {
            background: linear-gradient(135deg, #4e73df, #6f42c1);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            max-width: 480px;
            margin: 60px auto;
            padding: 40px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        .register-title {
            text-align: center;
            color: #4e73df;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 30px;
        }

        .register-container .form-columns {
            display: flex;
            gap: 30px;
        }

        .register-container .form-center {
            flex: 1;
        }

        .register-container .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .register-container .form-group label {
                width: 200px; /* 不再固定宽度 */
                text-align: left;
                margin-bottom: 6px;
                color: #5a5c69;
    
            }

            .register-container .form-group input[type="text"],
            .register-container .form-group input[type="email"],
            .register-container .form-group input[type="password"],
            .register-container .form-group select {
                flex: 1;
                padding: 10px 12px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 1rem;
            }

        /* Photo upload */
        .register-container .upload {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            border: 2px dashed #ccc;
            border-radius: 6px;
            cursor: pointer;
        }

            .register-container .upload:hover {
                border-color: #4e73df;
            }

            .register-container .upload small {
                color: #666;
            }

            .register-container .upload img {
                max-width: 70px;
                max-height: 70px;
                margin-top: 10px;
                border-radius: 50%;
                object-fit: cover;
            }

        /* Buttons */
        .register-container .btn-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .register-container .btn {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s;
            color: white;
        }

        .register-container .btn-register {
            background: #4e73df;
        }

            .btn-register:hover {
                background: #3b5bdb;
            }

        .register-container .btn-reset {
            background: #6f42c1;
        }

            .register-container .btn-reset:hover {
                background: #5a2fa0;
            }

        /* Validation messages */
        .register-container span.field-validation-valid,
        .register-container span.text-danger {
            color: #e74a3b;
            font-size: 0.9rem;
            display: block;
            margin-left: 130px;
        }

        /* Links */
        .register-container .links {
            text-align: center;
            margin-top: 15px;
        }

            .register-container .links a {
                color: #4e73df;
                text-decoration: none;
                margin: 0 10px;
            }

                .register-container .links a:hover {
                    text-decoration: underline;
                }

        /* 右边表单垂直排列 */
        .register-container .form-right .form-group.vertical {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .register-container .form-right .form-group.vertical label {
                width: auto; /* 不再固定宽度 */
                text-align: left;
                margin-bottom: 6px;
            }

    </style>
}

<div class="register-container">
    <div class="register-title">Register</div>
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-columns">
            <div class="form-center">

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" autofocus>
                </div>
                <span asp-validation-for="Name"></span>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email">
                </div>
                <span asp-validation-for="Email"></span>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password">
                </div>
                <span asp-validation-for="Password"></span>

                <div class="form-group">
                    <label asp-for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" type="password">
                </div>
                <span asp-validation-for="Confirm"></span>            

                <div class="form-group">
                    <label asp-for="Birthday">Birthday</label>
                    <input asp-for="Birthday" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <span asp-validation-for="Birthday"></span>

                <div class="form-group vertical" style="margin-top:0;">
                    <label asp-for="Photo">Photo</label>
                    <label class="upload">
                        <small>Select Photo...</small>
                        <input asp-for="Photo" accept="image/jpeg,image/png" hidden>
                        <img src="/images/photo.jpg" alt="preview">
                    </label>
                </div>
                <span asp-validation-for="Photo"></span>

                <div class="form-group">
                    <label asp-for="Category">Choose Category</label>
                    <select asp-for="Category">
                        <option value="">-- Select Category --</option>
                        <option value="Tenant">Tenant</option>
                        <option value="Owner">Owner</option>
                    </select>
                </div>
                <span asp-validation-for="Category"></span>
            </div>
        </div>

        <div class="g-recaptcha" data-sitekey="6LcljcsrAAAAAFTFMmc7DArOgnA2RsEmNFYg_xK7"></div>

        <div class="btn-group">
            <button type="submit" class="btn btn-register">Register</button>
            <button type="reset" class="btn btn-reset">Reset</button>
        </div>

        <div class="links">
            [ <a href="/Account/Login">Login</a> |
            <a href="/Account/ResetPassword">Reset Password</a> ]
        </div>
    </form>
</div>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
