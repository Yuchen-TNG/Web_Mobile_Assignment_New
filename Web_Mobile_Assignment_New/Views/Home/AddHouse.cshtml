@model Web_Mobile_Assignment_New.Models.House

@{
    ViewData["Title"] = "Add House";
}

<h2>Add a New House</h2>

<form asp-controller="Home" asp-action="AddHouse" method="post" enctype="multipart/form-data" class="mt-3">

    <!-- Room Type -->
    <div class="mb-3">
        <label class="form-label">Room Type</label>
        <select asp-for="RoomType" class="form-select" required>
            <option value="">-- Select Room Type --</option>
            <option value="Master Room">Master Room</option>
            <option value="Big Medium Room">Big Medium Room</option>
            <option value="Medium Room">Medium Room</option>
            <option value="Single Room">Single Room</option>
            <option value="Whole Unit">Whole Unit</option>
        </select>
    </div>


    <!-- Price -->
    <div class="mb-3">
        <label class="form-label">Price (RM)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" required />
    </div>

    <!-- Rooms -->
    <div class="mb-3">
        <label class="form-label">Rooms</label>
        <input asp-for="Rooms" type="number" min="0" class="form-control" placeholder="Enter number of rooms" required />
    </div>

    <!-- Bathrooms -->
    <div class="mb-3">
        <label class="form-label">Bathrooms</label>
        <input asp-for="Bathrooms" type="number" min="0" class="form-control" placeholder="Enter number of bathrooms" required />
    </div>

    <!-- Square Feet -->
    <div class="mb-3">
        <label class="form-label">Square Feet</label>
        <input asp-for="Sqft" type="number" min="0" class="form-control" placeholder="Enter size in sqft" required />
    </div>

    <!-- Address -->
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter address" required />
    </div>

    <!-- Other -->
    <div class="mb-3">
        <label class="form-label">Other Information</label>
        <textarea asp-for="Other" class="form-control" placeholder="Optional extra details"></textarea>
    </div>

    <!-- Upload Photo -->
    <div class="mb-3">
        <label class="form-label">Upload Photo</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-success">Add</button>
    <a href="/Home/Index" class="btn btn-secondary">Cancel</a>
</form>
