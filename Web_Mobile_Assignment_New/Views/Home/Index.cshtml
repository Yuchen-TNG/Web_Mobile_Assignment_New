@model List<Web_Mobile_Assignment_New.Models.House>

@{
    ViewData["Title"] = "Available Houses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Available Houses</h2>
     @if(User.IsInRole("Owner"))
     {
            <a class="btn btn-success" id="addHouse" href="@Url.Action("AddHouse", "Home")">+ Add House</a>
        }
</div>

<!-- 🔎 Filter Form (只做界面，不连后台) -->
<form class="mb-4 p-3 border rounded bg-light" asp-action="Filter" asp-controller="Home" method="get">
    <!--auto generate correct url-->

       <div class="row">
        <!-- Price Range -->
        <div class="col-md-3 mb-2">
            <label for="minPrice" class="form-label">Min Price</label>
            <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Enter min price" />
        </div>
        <div class="col-md-3 mb-2">
            <label for="maxPrice" class="form-label">Max Price</label>
            <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Enter max price" />
        </div>

        <!-- House Type -->
        <div class="col-md-3 mb-2">
            <label for="type" class="form-label">Type</label>
            <select class="form-select" id="type" name="type">
                <option value="Master Room">Master Room</option>
                <option value="Big Medium Room">Big Medium Room</option>
                <option value="Medium Room">Medium Room</option>
                <option value="Single Room">Single Room</option>
                <option value="Whole Unit">Whole Unit</option>
            </select>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Apply Filter</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>

<!-- 房子列表 -->
<div class="row">
    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <div class="d-flex justify-content-center align-items-center bg-light rounded p-5"
                 style="min-height:200px;">
                <p class="text-muted mb-0 fs-5">There are currently no properties available</p>
            </div>
        </div>
    }
    else
    {
        @foreach (var house in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm" style="width: 100%; aspect-ratio: 1/1; overflow: hidden;">
                    @if (!string.IsNullOrEmpty(house.ImageUrl))
                    {
                        <img src="@house.ImageUrl" alt="House Image"
                             style="width: 100%; height: 75%; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light"
                             style="width:100%; height:75%;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body text-center p-2">
                        <h5 class="card-title">RM @house.Price</h5>
                        <a href="@Url.Action("Details", "Home", new { id = house.Id })"
                           class="btn btn-primary btn-sm mt-2">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

