@model Web_Mobile_Assignment_New.Models.House

@{
    ViewData["Title"] = "Add House";
}

<h2>Add a New House</h2>

<form asp-controller="Home"  asp-action="AddHouse" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input asp-for="Address" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a href="/Home/Index" class="btn btn-secondary">Cancel</a>
</form>
