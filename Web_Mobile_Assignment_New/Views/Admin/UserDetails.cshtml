@model Web_Mobile_Assignment_New.Models.User

@{
    ViewData["Title"] = "User Details";
}

@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<style>
    .user-details-container {
        max-width: 600px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
        text-align: center;
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    .user-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 15px;
        transition: transform 0.3s ease;
    }

        .user-photo:hover {
            transform: scale(1.05);
        }

    /* === 按钮通用样式 === */
    button,
    a.button-link,
    a.btn {
        padding: 10px 18px;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        transition: transform 0.2s ease, filter 0.2s ease;
        margin: 5px 5px 0 0;
        display: inline-block;
    }

        button:hover,
        a.button-link:hover,
        a.btn:hover {
            transform: scale(1.03);
            filter: brightness(0.9);
        }

    /* === 按钮颜色分类 === */
    .btn-save {
        background: #2196F3;
    }
    /* 蓝色 */
    .btn-back {
        background: #9E9E9E;
    }
    /* 灰色 */
    .btn-delete {
        background: #f44336;
    }

    /* 红色 */
    .btn-reset {
        background: #9E9E9E;
    }
    /* 灰色 (和 back 一致) */
    .btn-restrict {
        background: #e67e22;
    }
    /* 橙色 */
    .btn-valid {
        background: #4caf50;
    }
    /* 绿色 */

    /* === 表单区域 === */
    .form-field {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-field label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-field input {
            width: 100%;
            padding: 8px 10px;
            font-size: 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .form-field input:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 6px rgba(74,144,226,0.4);
            }

            .form-field input[readonly] {
                background: #eee;
            }

    /* === 状态颜色 === */
    .status-valid {
        color: green;
        font-weight: bold;
    }

    .status-restricted {
        color: red;
        font-weight: bold;
    }

    .status-unknown {
        color: #666;
    }

    /* === Action 按钮区 === */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

        .action-buttons form {
            margin: 0;
        }

    /* === 照片区域 === */
    .photo-delete-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

</style>

<h1>User Details</h1>

<div class="user-details-container">

    <div class="photo-delete-form">
        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant photoUser && !string.IsNullOrEmpty(photoUser.PhotoURL))
        {
            <img src="/photos/@photoUser.PhotoURL" alt="User Photo" class="user-photo" />
            <form asp-action="DeletePhoto" method="post" onsubmit="return confirm('Are you sure you want to delete photo？');">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-delete">🗑 Delete Photo</button>
            </form>
        }
        else
        {
            <img src="/images/photo.jpg" alt="Default Photo" class="user-photo" />
        }
    </div>

    <form asp-action="UpdateUser" method="post">
        <div class="form-field">
            <label>Email:</label>
            <input asp-for="Email" readonly />
        </div>

        <div class="form-field">
            <label>Name:</label>
            <input asp-for="Name" />
        </div>

        <div class="form-field">
            <label>Birthday:</label>
            <input type="date" name="BirthdayString" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
        </div>

        <div class="form-field">
            <label>Role:</label>
            <input asp-for="Role" readonly />
        </div>

        <div class="form-field">
            <label>Status:</label>
            @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser)
            {
                <input type="text" value="@tenantUser.Status" readonly />
            }
            else
            {
                <input type="text" value="N/A" readonly />
            }
        </div>
        <button type="submit" class="btn-save">Save Changes</button>
        <a asp-action="UserDetails"
           asp-controller="Admin"
           asp-route-email="@Model.Email"
           class="button-link btn-reset">↩ Reset</a>
        <a asp-controller="Admin" asp-action="UserManagement" class="button-link btn-back">⬅ Back</a>
    </form>

    <div class="action-buttons">
        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete user?');">
            <input type="hidden" name="email" value="@Model.Email" />
            <button type="submit" class="btn-delete">🗑 Delete User</button>
        </form>
        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser && tenantUser.Status == "valid")
        {
            <form asp-action="RestrictedUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-delete">Restricted User</button>
            </form>
        }
        else
        {
            <form asp-action="ValidUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-valid">⭕ Valid User</button>
            </form>
        }
    </div>

</div>
