@model Web_Mobile_Assignment_New.Models.House

@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<!-- 图片轮播 -->
<!-- 图片轮播 -->
<div class="house-card">
    <div id="carousel" style="position: relative; width: 100%; max-height: 450px; overflow: hidden; border-radius:8px;">
        @{
            // 合并主图和附图
            var allImages = new List<(string Url, int? Id)>();
            if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                allImages.Add((Model.ImageUrl, null)); // 主图 Id null
            }
            if (Model.Images != null && Model.Images.Any())
            {
                allImages.AddRange(Model.Images.Select(i => (i.ImageUrl, (int?)i.Id)));
            }
        }

        @for (int index = 0; index < allImages.Count; index++)
        {
            <img src="@allImages[index].Url"
                 class="house-img carousel-img"
                 data-id="@allImages[index].Id"
                 data-index="@index"
                 style="display:@(index == 0 ? "block" : "none");" />
        }

        @if (allImages.Count > 1)
        {
            <button type="button" class="carousel-btn left-btn" onclick="prevImage()">⬅</button>
            <button type="button" class="carousel-btn right-btn" onclick="nextImage()">➡</button>
        }
    </div>

    <!-- 上传/删除图片 -->
    <form asp-controller="Admin" method="post" enctype="multipart/form-data" style="display:flex; gap:12px; margin-top:15px;">
        <input type="hidden" name="houseId" value="@Model.Id" />
        <input type="hidden" name="imageId" id="currentImageId" value="" />

        <input type="file" name="photos" multiple />
        <button type="submit" formaction="@Url.Action("UploadHouseImages", "Admin")" class="btn-submit btn-save">💾 Upload</button>
        <button type="button" onclick="deleteCurrentImage()" class="btn-submit btn-delete">🗑 Delete Photo</button>
    </form>
</div>

<!-- 房源信息更新 -->
<form asp-action="UpdateProperty" asp-controller="Admin" method="post">
    <div class="house-card">
        <input asp-for="Id" type="hidden" />

        <div class="field">
            <label>ID:</label>
            <input asp-for="Id" readonly />
            <span asp-validation-for="Id" class="text-error"></span>
        </div>

        <div class="field">
            <label>Room Name:</label>
            <input asp-for="RoomName" />
            <span asp-validation-for="RoomName" class="text-error"></span>
        </div>

        <div class="field">
            <label>Rooms:</label>
            <input asp-for="Rooms" type="number" />
            <span asp-validation-for="Rooms" class="text-error"></span>
        </div>

        <div class="field">
            <label>Bathrooms:</label>
            <input asp-for="Bathrooms" type="number" />
            <span asp-validation-for="Bathrooms" class="text-error"></span>
        </div>

        <div class="field">
            <label>Furnishing</label>
            <select asp-for="Furnishing" class="form-select">
                <option value="Fully">Fully Furnished</option>
                <option value="Semi">Semi Furnished</option>
                <option value="Unfurnished">Unfurnished</option>
            </select>
            <span asp-validation-for="Furnishing" class="text-danger"></span>
        </div>

        <div class="field">
            <label>Room Type:</label>
            <select asp-for="RoomType">
                <option value="Whole Unit">Whole Unit</option>
                <option value="Single Room">Single Room</option>
                <option value="Master Room">Master Room</option>
                <option value="Medium Room">Medium Room</option>
                <option value="Small Room">Small Room</option>
            </select>
            <span asp-validation-for="RoomType" class="text-error"></span>
        </div>

        <div class="field">
            <label>Price:</label>
            <input asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-error"></span>
        </div>

        <!-- StartDate / EndDate 限制 -->
        <div class="field">
            <label>Start Date:</label>
            <input asp-for="StartDate" type="date" id="StartDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="StartDate" class="text-error"></span>
        </div>

        <div class="field">
            <label>End Date:</label>
            <input asp-for="EndDate" type="date" id="EndDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="EndDate" class="text-error"></span>
            <div id="date-error" class="text-danger mt-1"></div>
        </div>


        <div class="field">
            <label>Address:</label>
            <input asp-for="Address" />
            <span asp-validation-for="Address" class="text-error"></span>
        </div>

        <div class="field">
            <label>Sqft:</label>
            <input asp-for="Sqft" type="number" />
            <span asp-validation-for="Sqft" class="text-error"></span>
        </div>

        <div class="field">
            <label>Status:</label>
            <input asp-for="RoomStatus" readonly />
            <span asp-validation-for="RoomStatus" class="text-error"></span>
        </div>

        <!-- 保存 / 重置 / 返回 -->
        <div class="btn-group">
            <button type="submit" class="btn-submit btn-save">💾 Save</button>
            <a asp-action="PropertyDetails" asp-controller="Admin" asp-route-id="@Model.Id" class="btn-submit btn-reset">↩ Reset</a>
            <a asp-action="PropertyManagement" asp-controller="Admin" class="btn-submit btn-back">⬅ Back</a>
        </div>
    </div>
</form>
<!-- 状态切换 + 删除房源 -->
<div class="house-card">
    <div class="btn-group btn-group-status">
        @if (Model.RoomStatus == "valid")
        {
            <a asp-controller="Admin"
               asp-action="RestrictedProperty"
               asp-route-id="@Model.Id"
               class="btn-submit btn-restricted">❌ Restricted</a>
        }
        else
        {
            <a asp-controller="Admin"
               asp-action="ValidProperty"
               asp-route-id="@Model.Id"
               class="btn-submit btn-valid">✅ Valid</a>
        }

        <form asp-controller="Admin" asp-action="PropertyDelete" method="post" style="margin:0; flex:1;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn-submit btn-delete"
                    onclick="return confirm('Are you sure you want to delete this property?');">
                🗑 Delete Property
            </button>
        </form>
    </div>
</div>


<!-- 脚本 -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // ---------- 时间限制逻辑 ----------
        const startDateInput = document.getElementById("StartDate");
        const endDateInput = document.getElementById("EndDate");
        const roomTypeSelect = document.querySelector("[asp-for='RoomType']");
        const dateError = document.getElementById("date-error");

        function updateEndDateLimit() {
            if (!startDateInput.value) {
                endDateInput.removeAttribute("max");
                dateError.textContent = "";
                return;
            }
            const startDate = new Date(startDateInput.value);
            let maxEnd = new Date(startDate);
            if (roomTypeSelect && roomTypeSelect.value === "Whole Unit") {
                maxEnd.setFullYear(maxEnd.getFullYear() + 2);
            } else {
                maxEnd.setFullYear(maxEnd.getFullYear() + 1);
            }
            const maxDateStr = maxEnd.toISOString().split("T")[0];
            endDateInput.max = maxDateStr;

            if (endDateInput.value && endDateInput.value > maxDateStr) {
                dateError.textContent = roomTypeSelect.value === "Whole Unit"
                    ? "❌ Whole Unit rental cannot exceed 2 years."
                    : "❌ Rental cannot exceed 1 year.";
                endDateInput.value = maxDateStr;
            } else {
                dateError.textContent = "";
            }
        }

        if (startDateInput) startDateInput.addEventListener("change", updateEndDateLimit);
        if (roomTypeSelect) roomTypeSelect.addEventListener("change", updateEndDateLimit);
        updateEndDateLimit();

        // ---------- 图片轮播逻辑 ----------
        let currentIndex = 0;
        const images = document.querySelectorAll('.carousel-img');
        const currentImageIdInput = document.getElementById('currentImageId');

        function showImage(index) {
            images.forEach((img,i)=> img.style.display = i===index ? 'block' : 'none');
            currentIndex = index;
            if(currentImageIdInput) currentImageIdInput.value = images[currentIndex]?.dataset.id || "";
        }

        window.showImage = showImage;
        window.prevImage = function() {
            if(images.length <=1) return;
            showImage((currentIndex-1+images.length)%images.length);
        };
        window.nextImage = function() {
            if(images.length <=1) return;
            showImage((currentIndex+1)%images.length);
        };

        // ---------- 删除图片逻辑 ----------
    window.deleteCurrentImage = function() {
        // 如果 carousel 显示的是主图，没有 data-id 就传0
        const imageId = currentImageIdInput.value || 0;
        const houseId = '@Model.Id';

        if(!confirm("Are you sure you want to delete this image?")) return;

        fetch('@Url.Action("DeleteHouseImage", "Admin")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ imageId: parseInt(imageId), houseId: parseInt(houseId) })
        }).then(res => {
            if(res.ok) location.reload();
            else alert("Delete failed!");
        });
    };

        showImage(0);
    });
</script>




