@model Web_Mobile_Assignment_New.Models.House

@{
    ViewData["Title"] = "Add House";
}

<div class="container mt-4">
    <h2 class="mb-4">Add New House</h2>

    <form asp-action="AddHouse" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="row g-3">
            <!-- 房屋类型 -->
            <div class="col-md-6">
                <label asp-for="RoomType" class="form-label">Room Type</label>
                <select asp-for="RoomType" class="form-select" id="RoomType" required>
                    <option value="">-- Select --</option>
                    <option value="Whole Unit">Whole Unit</option>
                    <option value="Single Room">Single Room</option>
                    <option value="Master Room">Master Room</option>
                    <option value="Medium Room">Medium Room</option>
                    <option value="Small Room">Small Room</option>
                </select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>

            <!-- 房间数 -->
            <div class="col-md-6">
                <label asp-for="Rooms" class="form-label">Rooms</label>
                <input asp-for="Rooms" class="form-control" id="Rooms" type="number" min="1" max="8" required />
                <span asp-validation-for="Rooms" class="text-danger"></span>
            </div>

            <!-- 卫生间 -->
            <div class="col-md-6">
                <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                <input asp-for="Bathrooms" class="form-control" type="number" min="1" />
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>

            <!-- 面积 -->
            <div class="col-md-6">
                <label asp-for="Sqft" class="form-label">Sqft</label>
                <input asp-for="Sqft" class="form-control" type="number" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>

            <!-- 价格 -->
            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- 地址 -->
            <div class="col-md-12">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- 图片 -->
            <div class="col-md-12">
                <label class="form-label">Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" required />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- 备注 -->
            <div class="col-md-12">
                <label asp-for="Other" class="form-label">Other Info</label>
                <textarea asp-for="Other" class="form-control"></textarea>
            </div>

            <!-- 房间名称 -->
            <div class="col-md-6">
                <label asp-for="RoomName" class="form-label">Room Name</label>
                <input asp-for="RoomName" class="form-control" />
            </div>

            <!-- 租期开始 -->
            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" />
            </div>

            <!-- 租期结束 -->
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
            </div>

            <!-- 家具配置 -->
            <div class="col-md-6">
                <label asp-for="Furnishing" class="form-label">Furnishing</label>
                <select asp-for="Furnishing" class="form-select">
                    <option value="Fully">Fully Furnished</option>
                    <option value="Semi">Semi Furnished</option>
                    <option value="Unfurnished">Unfurnished</option>
                </select>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const startDateInput = document.querySelector("input[name='StartDate']");
        const endDateInput = document.querySelector("input[name='EndDate']");

        function validateDates() {
            let start = new Date(startDateInput.value);
            let end = new Date(endDateInput.value);
            let today = new Date();
            today.setHours(0,0,0,0); // ignore time part

            if (start && end) {
                if (start < today) {
                    alert("Start Date cannot be in the past.");
                    startDateInput.value = "";
                } else if (end < start) {
                    alert("End Date must be after Start Date.");
                    endDateInput.value = "";
                }
            }
        }

        startDateInput.addEventListener("change", validateDates);
        endDateInput.addEventListener("change", validateDates);
    });
</script>

