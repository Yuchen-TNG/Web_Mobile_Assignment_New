@model Web_Mobile_Assignment_New.Models.User

@{
    ViewData["Title"] = "User Details";
}

@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #ffffff);
    }

    /* ==== 容器 ==== */
    .user-details-container {
        max-width: 750px;
        margin: 40px auto;
        background: #fff;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 28px;
        margin-bottom: 25px;
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
        color: #333;
    }

    /* ==== 用户头像 ==== */
    .user-photo-container {
        text-align: center;
        margin-bottom: 25px;
    }

    .user-photo {
        width: 170px;
        height: 170px;
        border-radius: 50%;
        border: 5px solid #2196F3;
        object-fit: cover;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
    }

        .user-photo:hover {
            transform: scale(1.07);
        }

    .photo-actions {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 12px;
    }

    /* ==== 按钮 ==== */
    button, a.btn {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: bold;
        color: #fff;
        cursor: pointer;
        transition: all 0.25s ease;
        text-decoration: none;
        display: inline-block;
    }

        button:hover, a.btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

    .btn-save {
        background: #2196F3;
    }

    .btn-delete {
        background: #f44336;
    }

    .btn-back, .btn-reset {
        background: #9E9E9E;
    }

    .btn-valid {
        background: #4caf50;
    }

    .btn-restrict {
        background: #e67e22;
    }

    /* ==== 表单 ==== */
    .form-field {
        margin-bottom: 18px;
    }

        .form-field label {
            display: block;
            font-weight: 600;
            margin-bottom: 6px;
            color: #333;
        }

        .form-field input {
            width: 100%;
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 15px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .form-field input:focus {
                border-color: #2196F3;
                box-shadow: 0 0 6px rgba(33,150,243,0.3);
            }

            .form-field input[readonly] {
                background: #f7f7f7;
                color: #777;
            }

    /* ==== 动作按钮区 ==== */
    .action-buttons {
        margin-top: 25px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
    }

    /* ==== 消息提示 ==== */
    .alert {
        max-width: 750px;
        margin: 20px auto;
        padding: 12px 18px;
        border-radius: 8px;
        font-weight: bold;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
    }

    .alert-error {
        background: #f8d7da;
        color: #721c24;
    }
</style>

<div class="user-details-container">
    <h1>User Details</h1>

    <div class="user-photo-container">
        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant photoUser && !string.IsNullOrEmpty(photoUser.PhotoURL))
        {
            <img src="/photos/@photoUser.PhotoURL" alt="User Photo" class="user-photo" />
        }
        else
        {
            <img src="/images/photo.jpg" alt="Default Photo" class="user-photo" />
        }

        <div class="photo-actions">
            <form asp-action="DeletePhoto" method="post" onsubmit="return confirm('Are you sure you want to delete photo?');">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-delete">🗑 Delete</button>
            </form>

            <form asp-action="UserUploadPhoto" method="post" enctype="multipart/form-data">
                <input type="hidden" name="email" value="@Model.Email" />
                <input type="file" name="photoFile" accept="image/*" required />
                <button type="submit" class="btn-save">📤 Upload</button>
            </form>

            <form asp-action="RotatePhoto" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <input type="hidden" name="degrees" value="90" />
                <button type="submit" class="btn-save">🔄 Rotate 90°</button>
            </form>
        </div>
    </div>

    <form asp-action="UpdateUser" method="post">
        <div class="form-field">
            <label>Email:</label>
            <input asp-for="Email" readonly />
        </div>

        <div class="form-field">
            <label>Name:</label>
            <input asp-for="Name" />
        </div>

        <div class="form-field">
            <label>Birthday:</label>
            <input type="date" name="BirthdayString" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
        </div>

        <div class="form-field">
            <label>Role:</label>
            <input asp-for="Role" readonly />
        </div>

        <div class="form-field">
            <label>Status:</label>
            @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser)
            {
                <input type="text" value="@tenantUser.Status" readonly />
            }
            else
            {
                <input type="text" value="N/A" readonly />
            }
        </div>

        <div class="action-buttons">
            <button type="submit" class="btn-save">💾 Save</button>
            <a asp-action="UserDetails" asp-controller="Admin" asp-route-email="@Model.Email" class="btn btn-reset">↩ Reset</a>
            <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-back">⬅ Back</a>
        </div>
    </form>

    <div class="action-buttons">
        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete user?');">
            <input type="hidden" name="email" value="@Model.Email" />
            <button type="submit" class="btn-delete">🗑 Delete User</button>
        </form>

        @if (Model is Web_Mobile_Assignment_New.Models.OwnerTenant tenantUser && tenantUser.Status == "valid")
        {
            <form asp-action="RestrictedUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-restrict">⚠ Restrict</button>
            </form>
        }
        else
        {
            <form asp-action="ValidUser" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn-valid">✔ Valid</button>
            </form>
        }
    </div>
</div>
