@model Web_Mobile_Assignment_New.Models.House

<style>
    #drop-zone {
        border-radius: 6px;
        cursor: pointer;
        border: 2px dashed #ccc;
        padding: 20px;
        text-align: center;
        transition: background-color 0.3s, border-color 0.3s;
    }

        #drop-zone.dragover {
            background-color: #e0f7fa;
            border-color: #00acc1;
        }

    #preview img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #ccc;
    }
</style>

@{
    ViewData["Title"] = "Add House";
}
@if (TempData["Message"] != null)
{
    var type = TempData["MessageType"]?.ToString() ?? "success";
    <div class="alert @(type == "success" ? "alert-success" : "alert-error")">
        @TempData["Message"]
    </div>
}

<div class="container mt-4">
    <h2 class="mb-4">Add New House</h2>

    <form asp-action="AddHouse" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="row g-3">
            <!-- 房屋类型 -->
            <div class="col-md-6">
                <label asp-for="RoomType" class="form-label">Room Type</label>
                <select asp-for="RoomType" class="form-select" id="RoomType" required>
                    <option value="">-- Select --</option>
                    <option value="Whole Unit">Whole Unit</option>
                    <option value="Single Room">Single Room</option>
                    <option value="Master Room">Master Room</option>
                    <option value="Medium Room">Medium Room</option>
                    <option value="Big Medium Room">Big Medium Room</option>
                </select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <input asp-for="RoomStatus" value="valid" type="hidden" />
            <!-- 房间名称 -->
            <div class="col-md-6">
                <label asp-for="RoomName" class="form-label">Room Name</label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>

            <!-- 房间数 -->
            <div class="col-md-6">
                <label asp-for="Rooms" class="form-label">Rooms</label>
                <input asp-for="Rooms" class="form-control" id="Rooms" type="number" min="1" max="8" required />
                <span asp-validation-for="Rooms" class="text-danger"></span>
            </div>

            <!-- 卫生间 -->
            <div class="col-md-6">
                <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                <input asp-for="Bathrooms" class="form-control" id="Bathrooms" type="number" min="1" max="6" required />
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>

            <!-- 面积 -->
            <div class="col-md-6">
                <label asp-for="Sqft" class="form-label">Area (sqft)</label>
                <input asp-for="Sqft" class="form-control" type="number" min="700" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>

            <!-- 图片 (多张上传 + Drag & Drop) -->
            <div class="col-md-12">
                <label class="form-label">Upload Images</label>
                <div id="drop-zone">
                    Drag & Drop Images Here or Click to Select
                </div>
                <input type="file" name="ImageFiles" id="ImageFiles" class="d-none" multiple required />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <div id="preview" class="mt-2 d-flex flex-wrap gap-2"></div>
            </div>

            <!-- 价格 -->
            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" id="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- 地址 -->
            <div class="col-md-12">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- 备注 -->
            <div class="col-md-12">
                <label asp-for="Other" class="form-label">Other Info</label>
                <textarea asp-for="Other" class="form-control"></textarea>
                <span asp-validation-for="Other" class="text-danger"></span>
            </div>

            <!-- 租期开始 -->
            <div class="mb-3">
                <label for="StartDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="StartDate" name="StartDate"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- 租期结束 -->
            <div class="mb-3">
                <label for="EndDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="EndDate" name="EndDate"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
                <div id="date-error" class="text-danger mt-1"></div>
            </div>

            <!-- 家具配置 -->
            <div class="col-md-6">
                <label asp-for="Furnishing" class="form-label">Furnishing</label>
                <select asp-for="Furnishing" class="form-select">
                    <option value="Fully">Fully Furnished</option>
                    <option value="Semi">Semi Furnished</option>
                    <option value="Unfurnished">Unfurnished</option>
                </select>
                <span asp-validation-for="Furnishing" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roomTypeSelect = document.getElementById("RoomType");
            const roomsInput = document.getElementById("Rooms");
            const bathroomsInput = document.getElementById("Bathrooms");
            const startDateInput = document.getElementById("StartDate");
            const endDateInput = document.getElementById("EndDate");
            const dateError = document.getElementById("date-error");
            const priceInput = document.getElementById("Price");
            const priceError = document.getElementById("price-error");

            const dropZone = document.getElementById("drop-zone");
            const fileInput = document.getElementById("ImageFiles");
            const preview = document.getElementById("preview");

            // ======== 累加图片数组 ========
            let allFiles = [];

            function updatePreview() {
                preview.innerHTML = "";
                allFiles.forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = e => {
                        // 外层 wrapper
                        const wrapper = document.createElement("div");
                        wrapper.classList.add("position-relative", "d-inline-block");
                        wrapper.style.margin = "5px";

                        // 图片
                        const img = document.createElement("img");
                        img.src = e.target.result;

                        // 红色 X 按钮
                        const delBtn = document.createElement("button");
                        delBtn.type = "button";
                        delBtn.textContent = "✕";   // Unicode 的 X
                        delBtn.style.position = "absolute";
                        delBtn.style.top = "2px";
                        delBtn.style.right = "2px";
                        delBtn.style.background = "rgba(255,255,255,0.9)";
                        delBtn.style.color = "red";
                        delBtn.style.border = "1px solid red";
                        delBtn.style.borderRadius = "50%";
                        delBtn.style.width = "22px";
                        delBtn.style.height = "22px";
                        delBtn.style.cursor = "pointer";
                        delBtn.style.fontSize = "14px";
                        delBtn.style.lineHeight = "18px";
                        delBtn.style.padding = "0";

                        delBtn.addEventListener("mouseenter", () => {
                            delBtn.style.background = "red";
                            delBtn.style.color = "white";
                        });
                        delBtn.addEventListener("mouseleave", () => {
                            delBtn.style.background = "rgba(255,255,255,0.9)";
                            delBtn.style.color = "red";
                        });

                        delBtn.addEventListener("click", () => {
                            allFiles.splice(index, 1);
                            updatePreview();
                        });

                        wrapper.appendChild(img);
                        wrapper.appendChild(delBtn);
                        preview.appendChild(wrapper);
                    };
                    reader.readAsDataURL(file);
                });
            }

            function addFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    allFiles.push(files[i]);
                }
                updatePreview();
            }

            dropZone.addEventListener("click", () => fileInput.click());

            dropZone.addEventListener("dragover", e => {
                e.preventDefault();
                dropZone.classList.add("dragover");
            });

            dropZone.addEventListener("dragleave", () => dropZone.classList.remove("dragover"));

            dropZone.addEventListener("drop", e => {
                e.preventDefault();
                dropZone.classList.remove("dragover");
                addFiles(e.dataTransfer.files);
            });

            fileInput.addEventListener("change", () => addFiles(fileInput.files));

            // 提交表单前，把所有文件写回 fileInput
            document.querySelector("form").addEventListener("submit", function () {
                const dataTransfer = new DataTransfer();
                allFiles.forEach(f => dataTransfer.items.add(f));
                fileInput.files = dataTransfer.files;
            });

            // ======== 租期限制 ========
            function updateDateLimit() {
                if (!startDateInput.value) {
                    endDateInput.removeAttribute("max");
                    dateError.textContent = "";
                    return;
                }
                let start = new Date(startDateInput.value);
                let maxEnd = new Date(start);
                if (roomTypeSelect.value === "Whole Unit") {
                    maxEnd.setFullYear(maxEnd.getFullYear() + 2);
                } else {
                    maxEnd.setFullYear(maxEnd.getFullYear() + 1);
                }
                let maxDateStr = maxEnd.toISOString().split("T")[0];
                endDateInput.max = maxDateStr;
                if (endDateInput.value && endDateInput.value > maxDateStr) {
                    dateError.textContent = roomTypeSelect.value === "Whole Unit"
                        ? "Whole Unit rental cannot exceed 2 years."
                        : "Rental for this room type cannot exceed 1 year.";
                    endDateInput.value = "";
                } else {
                    dateError.textContent = "";
                }
            }

            // ======== 房间数/卫生间逻辑 ========
            function updateFields() {
                if (roomTypeSelect.value === "Whole Unit") {
                    roomsInput.removeAttribute("readonly");
                    bathroomsInput.removeAttribute("readonly");
                } else {
                    roomsInput.value = 1;
                    roomsInput.setAttribute("readonly", "readonly");
                    bathroomsInput.value = 1;
                    bathroomsInput.setAttribute("readonly", "readonly");
                }
            }

            // ======== 价格验证 ========
            priceInput.addEventListener("input", () => {
                if (priceInput.value <= 0) {
                    priceError.textContent = "Price must be a positive number.";
                } else {
                    priceError.textContent = "";
                }
            });

            // ======== 绑定事件 ========
            roomTypeSelect.addEventListener("change", () => {
                updateFields();
                updateDateLimit();
            });
            startDateInput.addEventListener("change", updateDateLimit);
            endDateInput.addEventListener("change", updateDateLimit);

            // ======== 初始化 ========
            updateFields();
            updateDateLimit();
        });
    </script>
}


