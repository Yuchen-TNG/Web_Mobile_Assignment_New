@{
    ViewBag.Title = "Home | Admin";
}
<style>
    .AdminBlock {
        width: 100%;
        height: 788px;
        max-width: 1320px;
        background-color: #dfdfdf;
        /* 让内容水平 & 垂直居中 */
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 60px; /* 按钮之间的间距 */
    }

    .button {
        width: 500px;
        height: 300px;
        font-size: 28px;
        font-weight: bold;
        color: white;
        background-color: #1e90ff; /* 蓝色 */
        border: none;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
    }

        .button:hover {
            background-color: #4682b4; /* 深蓝 */
            transform: scale(1.05);
            box-shadow: 0 12px 20px rgba(0,0,0,0.5);
        }
</style>

<div class="AdminBlock">
    <form asp-controller="Admin" asp-action="UserManagement" method="get">
        <button type="submit" class="button">User Management</button>
    </form>
    <form asp-controller="Admin" asp-action="PropertyManagement" method="get">
        <button type="submit" class="button">Property Management</button>
    </form>
</div>
